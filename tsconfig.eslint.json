{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"include": [
		"src/**/*.ts",
		"src/**/*.mts",
		"src/**/*.d.ts",
		"packages/*/src/**/*.ts",
		"packages/*/src/**/*.mts",
		"packages/*/src/**/*.d.ts"
	],
	"exclude": ["node_modules", "dist", "packages/*/dist"]
}
