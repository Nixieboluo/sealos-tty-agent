{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"allowImportingTsExtensions": false,
		"declaration": true,
		"declarationMap": true,
		"noEmit": false,
		"noEmitOnError": true,
		"outDir": "./dist",
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
